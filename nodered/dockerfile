FROM nodered/node-red:latest

# Install required Node-RED nodes
RUN npm install \
    chess.js@^0.13.4 \
    node-red-contrib-influxdb@^0.6.1 \
    node-red-contrib-postgres@^0.6.1

# Copy flows
COPY flows.json /data/flows.json

